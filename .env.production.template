# Production Environment Variables for Render Deployment
# Copy these to your Render service environment variables

# Database
ATLASDB_URL=your_mongodb_atlas_connection_string_here
MONGO_URI=your_fallback_mongodb_connection_string_here

# Authentication
SESSION_SECRET=your_super_secret_session_key_here
JWT_SECRET=your_jwt_secret_key_here

# Server Configuration
NODE_ENV=production
PORT=10000

# Optional: Email Configuration (if using)
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Optional: OAuth Configuration (if using)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
